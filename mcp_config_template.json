{
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://username:password@host:5432/database"
      ],
      "env": {
        "POSTGRES_MAX_ROWS": "100",
        "POSTGRES_QUERY_TIMEOUT": "30000"
      }
    }
  }
}
